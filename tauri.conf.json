{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Borrow Checker",
  "version": "0.1.0",
  "identifier": "li.borrowchecker.app",
  "build": {
    "frontendDist": "static"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Borrow Checker",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png"
    ]
  }
}
